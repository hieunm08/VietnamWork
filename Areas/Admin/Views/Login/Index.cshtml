@model Model.EF.TaiKhoanModel

@{
    ViewBag.Title = "Index";
}

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/Assets/Admin//vendor/bootstrap/css/bootstrap.min.css">
    <link href="/Assets/Admin//vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="/Assets/Admin//libs/css/style.css">
    <link rel="stylesheet" href="/Assets/Admin//vendor/fonts/fontawesome/css/fontawesome-all.css">
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-image: url(../../../../Assets/Admin/images/login.jpg);
            background-size: cover;
            background-repeat: no-repeat;
        }

        .logo {
            color: #299cfd;
        }
    </style>
</head>
<body>
    <!-- ============================================================== -->
    <!-- login page  -->
    <!-- ============================================================== -->
    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center">
                <a href="../index.html">
                    @*<img class="logo-img" src="/Assets/Admin//images/logo.png" alt="logo">*@
                    <h2 class="logo">TÌM KIẾM VIỆC LÀM</h2>
                </a><span class="splash-description">Hãy điền thông tin của bạn !</span>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "form-control form-control-lg", @placeholder = "Tên đăng nhập", @autocomplete = "off", @type = "text" })

                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.MatKhau, new { @class = "form-control form-control-lg", @type = "Password", @placeholder = "Mật khẩu" })

                    </div>
                    @*<div class="form-group">
                            <label class="custom-control custom-checkbox">
                                @Html.CheckBoxFor(model => model.Remember) Remember Me
                            </label>
                        </div>*@
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Đăng nhập</button>
                }
            </div>
            <div class="card-footer bg-white p-0  ">
                @*<div class="card-footer-item card-footer-item-bordered">
                        <a href="#" class="footer-link">Create An Account</a>
                    </div>*@
                <div class="card-footer-item card-footer-item-bordered col">
                    <a href="/Admin/ForgetPassword/Index" class="footer-link">Quên mật khẩu</a>
                </div>
            </div>
        </div>
    </div>

    <!-- ============================================================== -->
    <!-- end login page  -->
    <!-- ============================================================== -->
    <!-- Optional JavaScript -->
    <script src="/Assets/Admin//vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="/Assets/Admin//vendor/bootstrap/js/bootstrap.bundle.js"></script>
</body>

</html>

