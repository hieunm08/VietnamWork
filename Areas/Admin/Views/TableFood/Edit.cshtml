@model Models.EF.TableFood

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Cập nhật bàn }
<div class="row">
    <div class="col-8">
        <div class="card">
            <h4 class="card-header">Chi tiết bàn ăn</h4>
            <div class="card-body">
                @using (Html.BeginForm("Edit", "TableFood", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.TableFood_id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.TableFood_name, htmlAttributes: new { @class = "control-label col-3" })
                                @Html.EditorFor(model => model.TableFood_name, new { htmlAttributes = new { @class = "col-5", @style = "border-radius:5px;outline:none;padding:5px" } })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.idArea, htmlAttributes: new { @class = "control-label col-3" })
                           
                                @Html.DropDownListFor(model => model.idArea, null, new { htmlAttributes = new { @class = "form-control",@style= "border-radius:5px;padding:5px 26px 5px 5px;" } })
                  
                           
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.status, htmlAttributes: new { @class = "control-label col-3" })
                        
                       
                                    @Html.EditorFor(model => model.status)
                                    @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                             
                            
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Lưu dữ liệu" class="btn btn-success btn-sm" />
                                <a href="/Admin/TableFood/index" class="btn btn-dark btn-sm">Hủy thao tác</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>



