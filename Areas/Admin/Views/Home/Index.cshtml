@model Models.ViewModel.Home_ViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Quản Lý Nghiệp Vụ Quán Cafe}
<div class="row">
<!-- ============================================================== -->
<!-- sales  -->
<!-- ============================================================== -->
<div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
    <div class="card border-3 border-top border-top-primary">
        <div class="card-body">
            <h5 class="text-muted">Doanh thu</h5>
            @{
                var tong = 0;
                foreach (var item in Model.BillInfos)
                {
                    tong += Convert.ToInt32(item.count * item.Price);
                }
                <div class="metric-value d-inline-block">
                    <h1 class="mb-1">@string.Format("{0:0,0}", tong) đ</h1>
                  
                </div>

            }
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end sales  -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- new customer  -->
<!-- ============================================================== -->
<div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
    <div class="card border-3 border-top border-top-primary">
        <div class="card-body">
            <h5 class="text-muted col">Quản lý</h5>
            @{
                var chucvu = 1;
                var count = 0;
                foreach (var item1 in Model.Accounts)
                {
                    if (chucvu == item1.idRole)
                    {
                        count += 1;
                    }

                }
                <div class="metric-value d-inline-block col">
                    <h1 class="mb-1">@(count)</h1>
                </div>
            }
            @*<div class="metric-label d-inline-block float-right text-success font-weight-bold">
                <span class="icon-circle-small icon-box-xs text-success bg-success-light"><i class="fa fa-fw fa-arrow-up"></i></span><span class="ml-1">10%</span>
            </div>*@
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end new customer  -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- visitor  -->
<!-- ============================================================== -->
<div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
    <div class="card border-3 border-top border-top-primary">
        <div class="card-body">
            <h5 class="text-muted">Nhân viên</h5>
            @{
                var chucvunhanvien = 1;
                var countnhanvien = 0;
                foreach (var item1 in Model.Accounts)
                {
                    if (chucvunhanvien != item1.idRole)
                    {
                        countnhanvien += 1;
                    }


                }
                <div class="metric-value d-inline-block">
                    <h1 class="mb-1">@(countnhanvien)</h1>
                </div>
            }
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end visitor  -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- total orders  -->
<!-- ============================================================== -->
<div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
    <div class="card border-3 border-top border-top-primary">
        <div class="card-body">
            <h5 class="text-muted">Tổng hóa đơn đặt hàng</h5>
            @{
                var countbill = 0;
                foreach (var item in Model.Bills)
                {
                    countbill += 1;
                }
                <div class="metric-value d-inline-block">
                    <h1 class="mb-1">@(countbill)</h1>
                </div>
            }
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end total orders  -->
<!-- ============================================================== -->
</div>