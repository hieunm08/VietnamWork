@model Model.ViewModel.HomeView

@{
    var id = Request.Url.Segments[3];
    ViewBag.Title = "DetailIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-hero overlay inner-page bg-image" style="background-image: url('../../Assets/Client/images/hero_1.jpg');" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold">@Model.CongTy.TenCongTy</h1>
                <div class="custom-breadcrumbs">
                    <a href="#">Trang Chủ</a> <span class="mx-2 slash">/</span>
                    <a href="#">Tin Việc Làm</a> <span class="mx-2 slash">/</span>
                    <span class="text-white"><strong>@Model.TinViecLam.TieuDeViecLam</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="site-section">
    <div class="container">
        <div class="row align-items-center mb-5">
            <div class="col-lg-8 mb-4 mb-lg-0">
                <div class="d-flex align-items-center">
                    <div class="border p-2 d-inline-block mr-3 rounded">
                        <img src="~/Assets/Client/images/topcv1.jpg" alt="Image">
                    </div>
                    <div>
                        <h2>@Model.TinViecLam.TieuDeViecLam</h2>
                        <div>
                            <span class="ml-0 mr-2 mb-2"><span class="icon-briefcase mr-2"></span>@Model.CongTy.TenCongTy</span>
                            <span class="m-2"><span class="icon-room mr-2"></span>@Model.ThanhPho.TenThanhPho</span>
                            <span class="m-2"><span class="icon-clock-o mr-2"></span><span class="text-primary">Full Time</span></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="row">
                    <div class="col-6">
                        <a href="#" class="btn btn-block btn-light btn-md"><span class="icon-heart-o mr-2 text-danger"></span>Save Job</a>
                    </div>
                    <div class="col-6">
                        <a href="#" class="btn btn-block btn-primary btn-md">Apply Now</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="mb-5">
                    <h3 class="h5 d-flex align-items-center mb-4 text-primary"><span class="icon-align-left mr-3"></span>Mô tả công việc</h3>
                    <p>@Model.TinViecLam.MoTa .</p>
                </div>
                <div class="mb-5">
                    <h3 class="h5 d-flex align-items-center mb-4 text-primary"><span class="icon-rocket mr-3"></span>Yêu Cầu Kĩ Năng</h3>
                    <p>@Model.TinViecLam.YeuCauKyNang .</p>
                </div>

                <div class="mb-5">
                    <h3 class="h5 d-flex align-items-center mb-4 text-primary"><span class="icon-turned_in mr-3"></span>Vị trí tìm kiếm .</h3>
                    <ul class="list-unstyled m-0 p-0">
                        <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>Tuyển dụng : @Model.ViTriUngTuyen.TenViTri</span></li>
                        <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span> Số lượng: @Model.TinViecLam.SoLuong</span></li>
                        <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>Thời gian thử việc: @Model.TinViecLam.NgayDang</span></li>
                    </ul>
                </div>

                <div class="mb-5">
                    <h3 class="h5 d-flex align-items-center mb-4 text-primary"><span class="icon-book mr-3"></span>Trình độ và kinh nghiệm</h3>
                    <ul class="list-unstyled m-0 p-0">
                        <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>Tốp nghiệp trình độ : @Model.TrinhDo.TenTrinhDo</span></li>
                        <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>Kinh nghiệm từ  : @Model.KinhNghiem.TenKinhNghiem</span></li>
                    </ul>
                </div>



                <div class="row mb-5">
                    <div class="col-6">
                        <a href="#" class="btn btn-block btn-light btn-md"><span class="icon-heart-o mr-2 text-danger"></span>Save Job</a>
                    </div>
                    <div class="col-6">
                        <a href="#" class="btn btn-block btn-primary btn-md">Apply Now</a>
                    </div>

                </div>

            </div>
            <div class="col-lg-4">
                <div class="bg-light p-3 border rounded mb-4">
                    <h3 class="text-primary  mt-3 h5 pl-3 mb-3 ">Thông tin chung</h3>
                    <ul class="list-unstyled pl-3 mb-0">
                        <li class="mb-2"><strong class="text-black">Ngày Đăng:</strong> @Model.TinViecLam.NgayDang</li>
                        <li class="mb-2"><strong class="text-black">Vị trí tuyển dụng</strong> @Model.ViTriUngTuyen.TenViTri</li>
                        <li class="mb-2"><strong class="text-black">Thời gian làm việc</strong> Full-time</li>
                        <li class="mb-2"><strong class="text-black">Kinh nghiệm:</strong>@Model.KinhNghiem.TenKinhNghiem</li>
                        <li class="mb-2"><strong class="text-black">Địa điểm tại :</strong>@Model.ThanhPho.TenThanhPho</li>
                        <li class="mb-2"><strong class="text-black">Mức lương:</strong>@Model.TinViecLam.MucLuong</li>
                        <li class="mb-2"><strong class="text-black">Giới tính :</strong> @Model.TinViecLam.GioiTinh</li>
                        <li class="mb-2"><strong class="text-black">Ngày hết hạn :</strong> @Model.TinViecLam.NgayHetHan</li>
                    </ul>
                </div>

                <div class="bg-light p-3 border rounded">
                    <h3 class="text-primary  mt-3 h5 pl-3 mb-3 ">Share</h3>
                    <div class="px-3">
                        <a href="#" class="pt-3 pb-3 pr-3 pl-0"><span class="icon-facebook"></span></a>
                        <a href="#" class="pt-3 pb-3 pr-3 pl-0"><span class="icon-twitter"></span></a>
                        <a href="#" class="pt-3 pb-3 pr-3 pl-0"><span class="icon-linkedin"></span></a>
                        <a href="#" class="pt-3 pb-3 pr-3 pl-0"><span class="icon-pinterest"></span></a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

